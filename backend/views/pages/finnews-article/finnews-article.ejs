<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Dynamic SEO Meta Tags -->
    <meta name="description" content="<%= metaDescription %>" />
    <meta name="keywords" content="<%= metaKeywords %>" />
    <meta name="author" content="wealthpsychology" />
    <meta name="robots" content="index, follow" />

    <!-- Dynamic Open Graph Meta Tags -->
    <meta property="og:title" content="<%= metaTitle %>" />
    <meta property="og:description" content="<%= metaDescription %>" />
    <meta property="og:image" content="<%= imageUrl %>" />
    <meta property="og:url" content="<%= newsUrl %>" />
    <meta property="og:type" content="article" />

    <!-- Dynamic Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="<%= metaTitle %>" />
    <meta name="twitter:description" content="<%= metaDescription %>" />
    <meta name="twitter:image" content="<%= imageUrl %>" />
    <meta name="twitter:site" content="@ka_r_an5" />

    <!-- Canonical Meta Tag -->
    <link rel="canonical" href="<%= newsUrl %>" />

    <!-- Additional Meta Tags -->
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="googlebot" content="index, follow" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- google adsense -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3313367090549858" crossorigin="anonymous"></script>
    <!-- google ads meta tag -->
    <meta name="google-adsense-account" content="ca-pub-3313367090549858" />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-L4D1L8LGWZ"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-L4D1L8LGWZ');
    </script>

    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != 'dataLayer' ? '&l=' + l : '';
        j.async = true;
        j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, 'script', 'dataLayer', 'GTM-WHZ2FFNC');
    </script>
    <!-- End Google Tag Manager -->

    <link rel="icon" href="/assets/branding/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="/frontend/components/footer/footer.css" />
    <script defer src="/frontend/components/themes/dark-mode-toggle.js"></script>

    <link rel="stylesheet" href="/frontend/finance-news/finnews-nav.css" />
    <link rel="stylesheet" href="/backend/views/pages/finnews-article/finnews-article.css" />
    <title><%= post.title %></title>
  </head>
  
  <body id="full-finnews-article-page">
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WHZ2FFNC" height="0" width="0" style="display: none; visibility: hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <header>
      <nav>
        <div class="menu-toggle" id="menu-bars">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>

        <div class="brand-logo-container">
          <a href="/index.html" class="home-nav">
            <img src="/assets/branding/logo.webp" alt="Brand Logo" class="brand-logo" />
          </a>
        </div>

        <ul class="nav-menu">
          <li><a href="/index.html">Home</a></li>
          <li class="dropdown">
            <a href="/finance-news/" class="active">Finance News <i class="fa-solid fa-angle-down" style="margin-left: 5px"></i></a>
            <ul class="dropdown-menu">
              <li>
                <a href="/finance-news/?category=market-updates">Market Updates <i class="fa-solid fa-angle-right"></i></a>
              </li>
              <li>
                <a href="/finance-news/?category=corporate-news">Corporate News <i class="fa-solid fa-angle-right"></i></a>
              </li>
              <li>
                <a href="/finance-news/?category=economy">Economy <i class="fa-solid fa-angle-right"></i></a>
              </li>
              <li>
                <a href="/finance-news/?category=fintech">FinTech <i class="fa-solid fa-angle-right"></i></a>
              </li>
            </ul>
          </li>
          <li><a href="/blog/">Blog</a></li>
          <li><a href="/financial-calculators/">Financial Calculators</a></li>
          <li><a href="/finance-quizzes/">Finance Quizzes</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <div id="news-container">
        <aside class="recent-news">
          <h2>Recent News</h2>
          <div class="recent-news-wrapper">
            <!-- related post goes here -->
          </div>
        </aside>


          <article class="full-news-article">
            <h1><%- post.title %></h1>
            <p><%= new Date(post.publishedDate).toLocaleDateString('en-US', { day: 'numeric', month: 'long', year: 'numeric' }) %></p>
            <!-- <p>Author: <%= post.author.fields.name %></p> -->

            <script>
              var articleCategory = '<%= post.category %>';
            </script>

            <!-- Render rich text content -->
            <div><%- renderPostRichTextHtml %></div>
            <a href="javascript:history.back()" class="back"><i class="fa-solid fa-caret-left"></i>Back</a>
          <button type="button" id="share-button"><i class="fa-solid fa-share-nodes"></i> Share</button>
          </article>

          
        <aside class="related-news">
          <h2>Related News</h2>
          <div class="related-news-wrapper">
            <!-- related post goes here -->
          </div>
        </aside>

        </div>
      </div>
    </main>

    <!-- Custom url chatbot -->
    <div id="wp-cb-container">
      <!-- chatbot fetches here dynamically -->
    </div>

    <!-- Include Footer Partial -->
    <%- include('../../components/footer') %>

    <script src="/frontend/wp-chatbots/wp-url-cb/wp-url-iframe-cb.js" defer></script>
    <!-- <script src="/views/pages/finance-news/news-article.js"></script> -->
    <script src="/frontend/finance-news/finnews-nav.js"></script>
    <script src="/backend/views/pages/finnews-article/finnews-article.js"></script>

  </body>
</html>
